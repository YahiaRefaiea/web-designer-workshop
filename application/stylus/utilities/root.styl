*, *:before, *:after
  box-sizing: border-box

html, body
  width: 100%
  height: 100%

body
  position: relative
  direction: dir
  text-align: align
  font-family: family-body
  font-size: font-default
  font-weight: weight-regular
  line-height: baseline*2
  background-color: background
  color: text-default
  -webkit-font-smoothing: antialiased

img
  user-select: none

.wrap
  position: relative
  height: 100%
  .container
    position: relative
    max-width: delta
    height: 100%
    margin: 0 auto