//  HEADING
h1, h2, h3, h4, h5, h6,
.h1, .h2, .h3, .h4, .h5, .h6
  margin: 0
  font-weight: weight-bold
  line-height: baseline*3
  color: text-dark

h1, .h1
  font-size: font-h1
  line-height: baseline*4
h2, .h2
  font-size: font-h2
h3, .h3
  font-size: font-h3
h4, .h4
  font-size: font-h4
h5, .h5
  font-size: font-h5
h6, .h6
  font-size: font-h6


//  PARAGRAPH
p, .p
  font-weight: weight-bold
  margin: 0


//  SMALL
small, .small
  font-size: font-small
  font-weight: weight-regular