.workshop .root
  position: absolute
  bottom: 25%
  {align}: 0
  width: 100%
  height: 50%


//  ALL
.workshop #title1,
.workshop #title2,
.workshop #heading1,
.workshop #heading2,
.workshop #subtitle,
.workshop #images,
.workshop #normal1,
.workshop #normal2
  position: absolute
  overflow: hidden
  {align}: 0
  width: 100%
  >*
    position: absolute
    {align}: 0
    width: 100%
    transition: 1


//  TITLE
.workshop #title1,
.workshop #title2
  height: baseline*4
  >*
    height: baseline*4
    top: baseline*4
    &.active
      top: 0
.workshop #title1
  bottom: baseline*4
.workshop #title2
  bottom: 0


//  HEADING
.workshop #heading1,
.workshop #heading2
  height: baseline*3
  >*
    height: baseline*3
    top: baseline*3
    &.active
      top: 0
.workshop #heading1
  bottom: baseline*3
.workshop #heading2
  bottom: 0


//  SUBTITLE
.workshop #subtitle
  top: 100%
  height: baseline*2
  >*
    height: baseline*2
    bottom: baseline*2
    &.active
      bottom: 0


//  IMAGES
.workshop #images
  top: 50%
  height: baseline*8
  margin-top: -( (baseline*8/2) + (baseline*2) )
  >*
    display: block
    {align}: 50%
    width: auto
    height: baseline*8
    transform: translateX(-50%)
    
    top: baseline*2
    opacity: 0
    &.active
      top: 0
      opacity: 1


//  NORMAL
.workshop #normal1,
.workshop #normal2
  top: 50%
  height: baseline*2
  text-align: center
  >*
    height: baseline*2
    top: baseline*2
    &.active
      top: 0
.workshop #normal1
  margin-top: baseline*2 + baseline*2
.workshop #normal2
  margin-top: baseline*2 + baseline*4