doctype html
html(lang=root.lang, dir=root.dir)
  
  //##  HEAD  ##
  head
    
    //  TITLE AND META TAGS
    block title
      title #{root.title}
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    block meta
      meta(name="description", content=root.description)
      meta(name="author", content=root.author)
      meta(property="og:url", content=root.url)
      meta(property="og:image", content=root.url+"includes/images/opengraph.png")
    
    //  INCLUDES
    link(rel="stylesheet", href="https://fonts.googleapis.com/css?family=Roboto+Slab:400,700")
    link(rel="icon", type="image/png", href="includes/images/favicon.png")
    link(rel="stylesheet", href="includes/stylesheets/wdw.lite.css")
    script(src="includes/javascripts/wdw.lite.js")
  
  //##  BODY  ##
  body
    
    //  CONTENT
    block content