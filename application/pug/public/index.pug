extends ../layouts/public

block content
  .wrap.workshop#workshop01: .container: .root
    
    //  TITLE1
    #title1
      each x in workshop01.title1
        .h1(class="slide-"+x.slide) #{x.text}
    
    //  TITLE2
    #title2
      each x in workshop01.title2
        .h1(class="slide-"+x.slide) #{x.text}
    
    //  HEADING1
    #heading1
      each x in workshop01.heading1
        .h2(class="slide-"+x.slide) #{x.text}
    
    //  HEADING2
    #heading2
      each x in workshop01.heading2
        .h2(class="slide-"+x.slide) #{x.text}
    
    //  SUBTITLE
    #subtitle
      each x in workshop01.subtitle
        p(class="slide-"+x.slide) #{x.text}
    
    //  IMAGES
    #images
      each x in workshop01.images
        img(class="slide-"+x.slide, src="includes/images/workshop01/"+x.source+".png")
    
    //  NORMAL1
    #normal1
      each x in workshop01.normal1
        p(class="slide-"+x.slide) #{x.text}
    
    //  NORMAL2
    #normal2
      each x in workshop01.normal2
        p(class="slide-"+x.slide) #{x.text}